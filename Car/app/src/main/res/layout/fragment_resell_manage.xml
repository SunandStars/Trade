<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <com.example.dawn.common.ImageView.CircleImageView
                android:id="@+id/manage_user_pic"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/view5"

                />
            <View
                android:layout_width="2dp"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/manage_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="hello"
                android:textSize="@dimen/font_14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="10dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_white_stocke"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="30dp"
                    android:textSize="@dimen/font_14sp"
                    android:text="我的信息"
                    android:layout_weight="7"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|center"

                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/manage_user_message_tv"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="30dp"
                    android:text="查看我的详细信息"
                    android:textSize="10sp"
                    android:layout_weight="4"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    />
                <Button
                    android:id="@+id/manage_user_message_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_find_next_holo_light"
                    android:layout_gravity="center"


                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/manage_user_address"
                    android:layout_weight="1"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="52dp"

                    android:text="四川省成都市"
                    android:textSize="@dimen/font_12sp"
                    android:padding="5dp"
                    android:gravity="left|center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="52dp"
                    android:background="#efefef"/>


                <TextView
                    android:id="@+id/manage_user_cellphonenumber"
                    android:layout_weight="0.6"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="52dp"
                    android:padding="5dp"
                    android:textSize="@dimen/font_12sp"
                    android:gravity="left|center"/>
                <TextView
                    android:id="@+id/manage_changenum_tv"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="修改手机号"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:id="@+id/manage_changenum_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_find_next_holo_light"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <Button
                android:id="@+id/manage_changpassword_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/font_14sp"
                android:text="修改密码  "
                android:gravity="center|right"
                android:background="#ffffff"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#efefef"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/manage_user_concern"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="关于XX"
                android:textSize="@dimen/font_14sp"
                android:gravity="left|center"
                android:layout_marginLeft="3dp"
                android:background="#ffffff"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/manager_user_version"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="版本信息"
                android:textSize="@dimen/font_14sp"
                android:gravity="left|center"
                android:layout_marginLeft="3dp"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/manager_user_treaty"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="用户协议"
                android:textSize="@dimen/font_14sp"
                android:gravity="left|center"
                android:layout_marginLeft="3dp"
                android:background="#ffffff"/>

        </LinearLayout>
