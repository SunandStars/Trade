<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="报价列表"
            android:textSize="@dimen/font_22sp"
            android:gravity="center"
            android:background="@drawable/textfield_default"
            />
        <Button
            android:id="@+id/bn_return_baojia"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="返回"
            android:textSize="@dimen/font_14sp"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/bn_admit_baojia"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="管理"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_14sp"
            android:background="#ffffff"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="根据报价查看"
                android:textSize="14sp"
                android:gravity="center"
                />
            <!--<View-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#ff709d"-->
                <!--/>-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/bn_price_etoc"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="32dp"
                    android:text="由高到低"
                    android:textSize="@dimen/font_14sp"
                    android:background="@drawable/textfield_default"
                    android:layout_weight="1"/>
                <!--<View-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:background="#ff709d"-->
                    <!--/>-->
                <Button
                    android:id="@+id/bn_price_ctoe"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="32dp"
                    android:text="由低到高"
                    android:textSize="@dimen/font_14sp"
                    android:background="@drawable/textfield_default"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="57dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="#ff709d"/>-->


        <LinearLayout
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
           >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="根据评价查看"
                android:textSize="@dimen/font_14sp"
                android:gravity="center"
                />
            <!--<View-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#ff709d"/>-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/bn_evalute_etoc"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="32dp"
                    android:text="由高到低"
                    android:textSize="@dimen/font_14sp"
                    android:background="@drawable/textfield_default"
                    android:layout_weight="1"/>
                <!--<View-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="#ff709d"/>-->
                <Button
                    android:id="@+id/bn_evalute_ctoe"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="32dp"
                    android:text="由低到高"
                    android:textSize="@dimen/font_14sp"
                    android:background="@drawable/textfield_default"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/list_baojia_list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>