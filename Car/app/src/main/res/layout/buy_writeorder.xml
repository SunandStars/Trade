                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/model_check_address1"
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textSize="@dimen/font_18sp"
                        />
                    <EditText
                        android:layout_weight="6"
                        android:id="@+id/model_check_adderss2"
                        android:text="XXXXXX"
                        android:textColorHint="@color/com_tenpay_form_edit_hint"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/model_check_cellphone1"
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="收货人电话"
                        android:textSize="@dimen/font_18sp"
                        />
                    <EditText
                        android:layout_weight="6"
                        android:id="@+id/model_check_cellphone2"
                        android:inputType="phone"
                        android:textColorHint="@color/com_tenpay_form_edit_hint"
                        android:layout_width="@dimen/width_0dp"
