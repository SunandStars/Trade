                    android:id="@+id/buy_iv3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:onClick="btn_onclick_writeorder_photo3"
                    android:background="@drawable/icon_addpic_focused"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TableRow>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="需求说明"
                        android:textSize="@dimen/font_18sp"
                       />
                    <EditText
                        android:layout_weight="6"
                        android:id="@+id/demand_et"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/buy_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/buy_bt"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="提交订单"
            android:background="@drawable/bottom_tab"
            android:textSize="@dimen/font_22sp"/>
    </RelativeLayout>

</RelativeLayout>
