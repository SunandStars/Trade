                        android:textSize="@dimen/font_18sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/model_check_post1"
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="邮政编码"
                        android:textSize="@dimen/font_18sp"
                        />
                    <EditText
                        android:layout_weight="6"
                        android:id="@+id/model_check_post2"
                        android:text="XXXXXX"
                        android:textColorHint="@color/com_tenpay_form_edit_hint"
                        android:inputType="number"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"
                        />
                </TableRow>
