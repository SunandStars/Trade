                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TableRow>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="汽修厂名称"
                        android:textSize="@dimen/font_18sp"
                        />
                    <EditText
                        android:hint="自动获取可以实现"
                        android:id="@+id/company_et"
                        android:layout_weight="6"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="修理厂地址"
                        android:textSize="@dimen/font_18sp"
                       />
                    <EditText
                        android:hint="自动获取可以实现"
                        android:id="@+id/address_et"
                        android:layout_weight="6"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"

                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="车系车型"
                        android:textSize="@dimen/font_18sp"
                        />
                    <TextView

                        android:layout_weight="6"
                        android:id="@+id/model_et"
                        android:hint="请点击选择车型"
                        android:textColorHint="@color/com_tenpay_form_hint"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"
                        android:background="@drawable/textfield_default"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/model_time_tv"
                        android:layout_weight="2"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:text="车型年份"
                        android:textSize="@dimen/font_18sp"
                        />
                    <EditText
                        android:layout_weight="6"
                        android:id="@+id/model_time_et"
                        android:hint="   例：1990"
                        android:textColorHint="@color/com_tenpay_form_edit_hint"
                        android:inputType="number"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_18sp"
                        />
                </TableRow>

