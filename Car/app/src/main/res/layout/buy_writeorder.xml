                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal" >
                            <Button
                                android:id="@+id/btnAdd"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:text="添加"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需辅助补充图片"
                android:textSize="@dimen/font_18sp"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <!--<View-->
                    <!--android:layout_width="5dp"-->
                    <!--android:layout_height="110dp"/>-->
                <ImageView
                    android:id="@+id/buy_iv1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:onClick="btn_onclick_writeorder_photo1"
                    android:background="@drawable/icon_addpic_focused"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="110dp"/>
                <ImageView
                    android:id="@+id/buy_iv2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:onClick="btn_onclick_writeorder_photo2"
                    android:background="@drawable/icon_addpic_focused"
                    android:scaleType="fitXY"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆识别号图片"
                android:textSize="@dimen/font_18sp"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <!--<View-->
                    <!--android:layout_width="5dp"-->
                    <!--android:layout_height="110dp"/>-->
