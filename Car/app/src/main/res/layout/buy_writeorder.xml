    <TextView
        android:id="@+id/buy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="填写订单"
        android:textSize="@dimen/font_22sp"
        android:gravity="center"
        android:background="@drawable/textfield_default"
        />
    <Button
        android:id="@+id/bn_writeorder_return"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:text="返回"
        android:textSize="@dimen/font_14sp"
        android:background="#ffffff"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buy_bottom"
        android:layout_below="@+id/buy_title"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





            <TableLayout
